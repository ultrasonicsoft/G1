<UserControl x:Class="GlassProductManager.DashboardMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="300">
    <UserControl.Resources>
        <SolidColorBrush x:Key="LightBackground" Color="#2D2D30"/>
        
    </UserControl.Resources>
    <Grid >
        <StackPanel Grid.Row="1" Grid.Column="0" Height="auto" Background="Gray">
            <ToggleButton Content="Home" Focusable="True" Height="40" Name="btnHome" Checked="btnHome_Checked" />
            <ToggleButton Content="Create New Quote" Focusable="True" Height="40" Name="btnCreateNewQuote" Checked="btnCreateNewQuote_Checked" />
            <ToggleButton Content="Price Settings" Focusable="True" Height="40" Name="btnPriceSettings" Checked="btnPriceSettings_Checked"/>
            <ToggleButton Content="Customer Settings" Focusable="True" Height="40" Name="btnCustomerSettings" Checked="btnCustomerSettings_Checked" />
            <ToggleButton Content="Sale Orders" Focusable="True" Height="40" Name="btnSaleOrder" Checked="btnSaleOrder_Checked" />
            <ToggleButton Content="Worksheet" Focusable="True" Height="40" Name="btnWorksheet" Checked="btnWorksheet_Checked" />
            <ToggleButton Content="Invoice" Focusable="True" Height="40" x:Name="btnInvoice" Checked="btnInvoice_Checked" />
            <ToggleButton Content="Payment" Focusable="True" Height="40" x:Name="btnMakePayment" Checked="btnMakePayment_Checked" />
            <ToggleButton Content="Commander View" Focusable="True" Height="40" Name="btnCommanderSection" Checked="btnCommanderSection_Checked" />
            <ToggleButton Content="Barcode Printer" Focusable="True" Height="40" Name="btnBarcodePrinter" Checked="btnBarcodePrinter_Checked" />
            <ToggleButton Content="Configure Database" Focusable="True" Height="40" Name="btnConfigureDatabase" Checked="btnConfigureDatabase_Checked" />
        </StackPanel>
    </Grid>
</UserControl>
